<Window x:Class="Digigrade.Otto.Programmer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:settings="clr-namespace:Digigrade.Otto.Programmer.Windows"
        mc:Ignorable="d"
        Loaded="OnLoaded"
        Title="MainWindow" 
        Height="{settings:WindowSettingsBinding MainWindowHeight}"
        Width="{settings:WindowSettingsBinding MainWindowWidth}"
        Left="{settings:WindowSettingsBinding MainWindowLeft}"
        Top="{settings:WindowSettingsBinding MainWindowTop}"
        SizeChanged="Window_SizeChanged" 
        SizeToContent="WidthAndHeight">
</Window>
